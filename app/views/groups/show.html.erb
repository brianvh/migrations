<% title "BlitzMail Migrations: Group Info", false %>
<h2 id="group-header">Group Information for <%= @group.name %></h2>
<fieldset id="group-members">
  <legend>Group Members</legend>
  <div class="buttons right">
    <%= link_to_function "Add Deptclass", "$('add-deptclass').show('slow')" %> | 
    <%= link_to_function "Remove Deptclass", "$('remove-deptclass').show('slow')" %>
  </div><br />

  <%= render 'add_deptclass' %>
  <%= render 'remove_deptclass' %>
  <%= render 'users/user_list' unless @users.empty? %>
  <%= render 'no_users' if @users.empty? %>
</fieldset>
