<tr id="member-<%= member.id %>">
  <td align="left;" style="vertical-align: top;">
    &nbsp;&nbsp;&nbsp;<%= check_box_tag "group[accounts][]", member.id, @group.accounts.include?(member.id) %>
  </td>
  <td>
    <%= member.name %>
    <% unless member.primary_resource_ownerships.empty? %>
      <% member.primary_resource_ownerships.each do |calendar| %>
        <br /><%= calendar.name %>
      <% end -%>
    <% end -%>
  </td>
  <td align="left;" style="vertical-align: top;">
    <%= member.deptclass if member.is_a?(User) %>
  </td>
  <td>
    <%# member.is_a?(User) ? member.display_mailboxtype : "Calendar" %>
    <%= member.display_mailboxtype %>
    <% unless member.primary_resource_ownerships.empty? %>
      <% member.primary_resource_ownerships.each do |calendar| %>
        <br />Calendar
      <% end -%>
    <% end -%>
  </td>
</tr>
