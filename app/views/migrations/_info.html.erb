<div id="device" class="fieldset form">
  <h2>Migration Info</h2>
  <div class="group wat-cf">
    <div class="left label">Date</div>
    <div class="right tight"><%= @migration.date %></div>
  </div>

  <div class="group wat-cf">
    <div class="left label">Week Of</div>
    <div class="right tight"><%= @migration.week_of %></div>
  </div>

  <div class="group wat-cf">
    <div class="left label">Migration Count Limit</div>
    <div class="right tight"><%= @migration.max_accounts %></div>
  </div>

  <div class="group wat-cf">
    <div class="left label">Allowed Types</div>
    <div class="right"><%= @migration.display_migration_types %></div>
  </div>

  <div class="group wat-cf">
    <div class="left label">User accounts</div>
    <div class="right tight"><%= @migration.users.size %></div>
  </div>

  <div class="group wat-cf">
    <div class="left label">Resource accounts</div>
    <div class="right tight"><%= @migration.resources.size %></div>
  </div>

  <div class="group wat-cf">
    <div class="left label">Follow-up Sent on</div>
    <div class="right tight"><%= @migration.followup_sent_on.nil? ? "Never" : @migration.followup_sent_on %></div>
  </div>
</div>
