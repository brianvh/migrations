<%= form_for @group do |f| -%>
<div id="choose-contact" class="fieldset form" style="display: none">
  <h2>Choose a Key Contact</h2>
  <div class="group navform wat-cf">
    <div class="text_button_padding">
      <%= hide_div_link 'Cancel', 'choose-contact' %>
    </div>
    <div class="right">
      <button class="button" type="submit">Add Contact</button>
    </div>
  </div>
  <%= f.hidden_field :action, :value => :choose_contact %>
  <div class="group wat-cf">
    <div class="left label"><%= f.label :contact_id, "Choose a Member" %></div>
    <div class="right">
      <%= f.select :contact_id, @group.members_for_contact_list,
      {:include_blank => "Choose..."} %>
    </div>
  </div>
</div>
<% end -%>
