<% title "BlitzMail Migrations: New Device", false %>
<h2 id="device-header">New <%= @device_type %> Device Information</h2>

<%= form_for @device, :url => devices_path, :as => :device do |f| -%>
	<%= f.error_messages %>

	<%= render :partial => @device_type == 'Computer' ? "computer_form" : "mobile_form", :locals => {:f => f} %>

	<div class="buttons"><%= link_to "Cancel", devices_path %></div>
  <div class="right"><%= f.submit "Create Device" %></div>
  <br class="clear"/>

<% end -%>