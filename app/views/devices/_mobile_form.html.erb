<div class="lcol"><%= f.label :vendor_choice, "Vendor" %></div>
<div class="rcol">
  <%= render 'choice_select', {:f => f, :field => 'vendor',
    :klass => DeviceMobileVendorChoice } %>
</div><br class="clear" />

<div class="lcol"><%= f.label :kind_choice, "Kind" %></div>
<div class="rcol">
  <%= render 'choice_select', {:f => f, :field => 'vendor',
    :klass => DeviceMobileKindChoice } %>
</div><br class="clear" />

<div class="lcol"><%= f.label :carrier_choice, "Carrier" %></div>
<div class="rcol">
  <%= render 'choice_select', {:f => f, :field => 'vendor',
    :klass => CarrierChoice } %>
</div><br class="clear" />

<div class="lcol"><%= f.label :os_version_choice, "OS Version" %></div>
<div class="rcol"><%= f.text_field :os_version %>
</div><br class="clear" />

<div class="lcol"><%= f.label :contacts_count, "# Contacts" %></div>
<div class="rcol">
  <%= f.select :contacts_count, ["0","1-100",">100"], {:include_blank => "Choose..."} %>
</div><br class="clear" />

<div class="lcol"><%= f.label :new_email_choice, "Email Client" %></div>
<div class="rcol">
  <%= f.select :new_email_choice, MobileEmailClientChoice.to_options_array, 
      {:include_blank => "Choose..."} %>
</div><br class="clear" />
