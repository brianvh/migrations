<%= form_for @group do |f| -%>
<div id="add-deptclass" class="fieldset form" style="display: none">
  <h2>Adding a Deptclass</h2>
  <div class="group navform wat-cf">
    <div class="text_button_padding">
      <%= hide_div_link 'Cancel', 'add-deptclass' %>
    </div>
    <div class="right">
      <button class="button" type="submit">Add to Group</button>
    </div>
  </div>
  <%= f.hidden_field :action, :value => :add_deptclass %>
  <div class="group wat-cf">
    <div class="left label"><%= f.label :add_deptclass, "Deptclass(es)" %></div>
    <div class="right"><%= f.text_field :add_deptclass, :size => 60 %></div>
  </div>
</div>
<% end -%>
