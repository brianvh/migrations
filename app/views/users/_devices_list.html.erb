<div class="secondary-navigation">
  <ul class="wat-cf">
    <li><%= link_to "Add Computer Device", new_device_path(:type => 'computer') %></li>
    <li><%= link_to "Add Mobile Device", new_device_path(:type => 'mobile') %></li>
  </ul>
</div>
<div id="devices" class="fieldset">
  <h2>Devices</h2>
  <div class="inner">
    <table class="table">
      <tr>
        <th align="left">Name</th>
        <th align="left">Type</th>
        <th align="left">OS Version</th>
        <th align="left">Email Client</th>
        <th align="left">Office Version</th>
        <th align="left">Browser</th>
      </tr>
      <%= render :partial => 'devices/device', :collection => @devices %>
    </table>
  </div>
</div>
