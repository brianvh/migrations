<%= form_for @profile do |f| -%>
<%= f.hidden_field(:state_event, :value => @profile.reviewed? ? "reset" : "reviewed") %>
<div class="fieldset form" id="support_considerations">
  <h2>Support Considerations</h2>
  <div class="group navform wat-cf">
    <div class="right">
      <button class="button" type="submit">Mark as <%= @profile.reviewed? ? "Not Reviewed" : "Reviewed" %></button>
    </div>
  </div>
  
  <div class="group wat-cf">
    <div class="left label wide">Message count:</div>
    <div class="right wide"><%= @profile.msg_count %></div>
  </div>
  <div class="group wat-cf">
    <div class="left label wide">Mailbox size:</div>
    <div class="right wide"><%= @profile.mbox_size %></div>
  </div>
  <div class="group wat-cf">
    <div class="left label wide">Comfort level:</div>
    <div class="right wide"><%= @profile.comfort_level %></div>
  </div>
  <div class="group wat-cf">
    <div class="left label wide">Complexity level:</div>
    <div class="right wide">
      <%= @profile.complexity_level %><br />
      <% if @profile.used_only_blitz? %>
      <em>This person has only used the Blitz client.</em>
      <% end -%>
    </div>
  </div>
  <div class="group wat-cf">
    <div class="left label wide">Syncs with other accounts?</div>
    <div class="right wide"><%= unspecified_if_blank(@profile.uses_sync, false) %></div>
  </div>
  <div class="group wat-cf">
    <div class="left label wide">VIP?</div>
    <div class="right wide"><%= unspecified_if_blank(@profile.vip, false) %></div>
  </div>
  <div class="group wat-cf">
    <div class="left label wide">Support Notes:</div>
    <div class="right wide"><%= @profile.support_notes %></div>
  </div>
</div>
<% end -%>